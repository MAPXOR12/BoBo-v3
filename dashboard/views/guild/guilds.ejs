<%- include ('../parts/head.ejs',{bot,user})%>
    
<style>
.guild-list li {
  background:red;
  width:300px;
  list-style:none;
  }
  
  .guild-list li img{
    margin-left:150px;
    width: 52px;
    height:52px;
    object-cover: center;
    border-radius:50%;
  }
  
  </style>
  <div class="container">
    <div class="row">
      <div class="col-3 md-3">
    
   
   
   <% user.guilds.forEach(guild => {
  
 const permsOnGuild = new perms(guild.permissions_new);
 if(!permsOnGuild.has("MANAGE_GUILD")) {
 return;
 }
%>
<% if (guild.icon) {
 iconurl = "https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon + ".png??size=70";
} else {
 iconurl = "https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949";
}
%>

 
  <% if(bot.guilds.cache.get(guild.id)) { %>
   <br>
    <br>
   <ul class="guild-list">
     
     <li>         
      <a href="/dashboard/guild/<%=guild.id%>">
        <img src="<%= iconurl %>"/>
       </a>  

     </li>
    </ul>
    <% }})%>
    

           </div>
    </div>
  </div>
      
   
    
