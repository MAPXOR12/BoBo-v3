<%- include ('../parts/head.ejs',{bot,user})%>
    
<style>

.guild-list li {
  background:red;
  width:300px;
  list-style:none;
  height:70px;
  }
  
  .guild-list li img{
    margin-top:10px;
    margin-right:150px;
    width: 52px;
    height:52px;
    object-cover: center;
    border-radius:50%;
  }
  .guild-list li .btn {
    border:none;
  margin-left:100px;
    margin-top:-80px;
    
    
  }
  .select-server {
    background:red;
    
    font-size: 37px;
  }
  
  </style>
  
  
  <br>
  <br>
  
  <div class="container">
    <div class="row">
     <div class="col">
    
   
   <div class="select-server">
     
     <p>SELECT A SERVER</p>
       </div>
       <% const use = bot.guilds.cache.get(config.serverid).members.cache.get(user.id) %>
      <% if (!use) { %>
    <div style="width: 512px;
	 padding: 16px;
	 margin: 8px;  background-color: rgba(77, 77, 255, 0.05);">
      <h3 style="color: #4d4dff; 	 margin-top: 0;
	 margin-bottom: 8px;
	 font-size: 18px;
	 font-family: 'Poppins', sans-serif;">Hey <%= user.username%>!</h3>
      <p style="margin: 0;
	 font-size: 14px;
	 font-family: 'Open Sans', sans-serif;
	 color: #555;">Looks like you aren't in BoBo Support Server. <a href="/support">Join Here!</a></p>
    </div>

  <% } %>
   <% user.guilds.forEach(guild => {
  
 const permsOnGuild = new perms(guild.permissions_new);
 if(!permsOnGuild.has("MANAGE_GUILD")) {
 return;
 }
%>
<% if (guild.icon) {
 iconurl = "https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon + ".png??size=70";
} else {
 iconurl = "https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949";
}
%>

  <% if(bot.guilds.cache.get(guild.id)) { %>
   <br>
    <br>
    
   <ul class="guild-list">
     
     <li>         
      <a href="/dashboard/guild/<%=guild.id%>">
        <img src="<%= iconurl %>"/>
       </a>  
       
       <a class="btn btn-success" href="/dashboard/guild/<%= guild.id%>">Dashboard</a>
  
     </li>
    </ul>
    <% }%>
     <% if(!bot.guilds.cache.get(guild.id)){%>
       <br>
       <br>
       <ul class="guild-list">
         <li> 
           <img src="<%= iconurl%>"/>
           <a class="btn btn-primary" href="">invite</a>
         </li>
       </ul>
       <% }%>
       
       
    <%   })%>
    

           </div>
    </div>
  </div>
      
   
  
  
       </div>
         
<script>
  let arrow = document.querySelectorAll(".link_name")
  
  for(i=0; i < arrow.length;i++){
    arrow[i].addEventListener("click",(e)=>{
      let target = e.target.parentElement.parentElement.parentElement;
      
      target.classList.toggle("showMenu")
    })
    
  }
  let sidebar= document.querySelector(".sidebar");
  let sidebarBtn= document.querySelector(".text");
  sidebarBtn.addEventListener('click',()=>{
    
    sidebar.classList.toggle("close");
   // console.log(sidebar);
  })
  
 
</script>

  
  
  