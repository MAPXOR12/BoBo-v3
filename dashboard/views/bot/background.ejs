   <img  id="imageid" value="<%= item.id %>" onclick="clickAdd()" src="<%= item.assets.link%>" style=" width:230px; height:170px; border-radius:3%; z-index:0.5;" alt="<%=item.name%>"/>
        
    
    
      
  
        
